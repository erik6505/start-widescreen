{
  "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
  "version": 3,
  "title": "Widescreen",

  "settings": {
    "layout": {"contentSize": "920px", "wideSize": "1200px" },


"spacing": {
 "defaultSpacingSizes": false,
 "units": [ "px", "em", "rem", "%" ],
 "padding": true,
 "margin": true,
 "blockGap": true,
"spacingSizes": [
 { "name": "None", "slug": "none", "size": "0" },
 { "name": "Space X-Small", "slug": "space-xs", "size": "clamp(4px, calc(0.5vh + 0.5vw), 14px)" },
 { "name": "Space Small", "slug": "space-sm", "size": "clamp(6px, calc(1vh + 1vw), 16px)" },
 { "name": "Space Medium", "slug": "space-md", "size": "clamp(12px, 2vw, 18px)" },
 { "name": "Space Large", "slug": "space-lg", "size": "clamp(18px, 3vw, 26px)" },
 { "name": "Space X-Large", "slug": "space-xl", "size": "clamp(26px, calc(4vh + 4vw), 100px)" }
]
},

"typography": {
 "writingMode": true, "defaultFontSizes": false, "fluid": true,

"fontSizes": [
{ "name": "Rubrik 1", "size": "clamp(40px, calc(20px + 4vw), 70px)", "slug": "xx-large" },
{ "name": "Rubrik 2", "size": "clamp(32px, calc(8px + 4vw), 50px)", "slug": "x-large" },
{ "name": "Rubrik 3", "size": "clamp(20px, calc(16px + 2.5vw), 40px)", "slug": "size-three" },
{ "name": "Rubrik 4", "size": "clamp(25px, calc(13px + 2.2vw), 34px)", "slug": "size-four" },
{ "name": "Rubrik 5", "size": "clamp(22px, calc(8px + 1.8vw), 28px)", "slug": "small" },
{ "name": "Rubrik 6", "size": "clamp(18px, calc(8px + 1.4vw), 22px)", "slug": "x-small" },
{ "name": "Vanlig text", "size": "clamp(1rem, 2vw, 1.2rem)", "slug": "paragraph" },
{ "name": "Large", "size": "clamp(1.2rem, 2vw, 1.6rem)", "slug": "large" },
{ "name": "medium", "size": "clamp(1.2rem, 2vw, 1.3rem)", "slug": "medium" },
{ "name": "Liten text", "size": "clamp(0.75rem, 1vw, 0.85rem)", "slug": "tiny" }
],

"fontFamilies": [
{
"fontFamily": "Roboto, sans-serif",
"name": "Roboto",
"slug": "roboto",
"fontFace": [
{
        "fontFamily": "Roboto",
        "fontWeight": "400",
        "fontStyle": "normal",
        "src": [ "file:./fonts/Roboto-Regular.woff2" ]
      }
    ]
  }
]
    }
  },

"styles": {
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--space-sm)"
    },

    "typography": {"fontFamily": "var:preset|font-family|roboto"},
    "color": {"text": "var:preset|color|accent-4" },

"blocks": {
 "core/paragraph": {"typography": {
 "fontSize": "var:preset|font-size|paragraph"}
 },

 "core/list": {"typography": {
 "fontSize": "var:preset|font-size|paragraph"}
 },

"core/media-text": {
  "color": {
    "background": "var:preset|color|dark-1",
    "text": "var:preset|color|light-1"
  }
},



 "core/button": {
        "variations": {
          "outline": {
            "spacing": {
              "padding": {
                "bottom": "var:preset|spacing|space-md",
                "left": "var:preset|spacing|space-lg", 
                "right": "var:preset|spacing|space-lg",
                "top": "var:preset|spacing|space-md"
              }
            },
            "css": ".wp-block-button__link:hover {background: var(--wp--preset--color--light-2); color: var(--wp--preset--color--light-1);}"
          }
        }
      }
    },

"elements": {
  "h1": {"typography":{"fontSize":"var:preset|font-size|xx-large"},"spacing":{"margin":{"top":"var:preset|spacing|space-sm","bottom":"var:preset|spacing|space-sm"}}},
  "h2": {"typography":{"fontSize":"var:preset|font-size|x-large"},"spacing":{"margin":{"top":"var:preset|spacing|space-sm","bottom":"var:preset|spacing|space-sm"}}},
  "h3": {"typography":{"fontSize":"var:preset|font-size|size-three"},"spacing":{"margin":{"top":"var:preset|spacing|space-sm","bottom":"var:preset|spacing|space-sm"}}},
  "h4": {"typography":{"fontSize":"var:preset|font-size|size-four"},"spacing":{"margin":{"top":"var:preset|spacing|space-sm","bottom":"var:preset|spacing|space-xs"}}},
  "h5": {"typography":{"fontSize":"var:preset|font-size|small"},"spacing":{"margin":{"top":"var:preset|spacing|space-sm","bottom":"var:preset|spacing|space-sm"}}},
  "h6": {"typography":{"fontSize":"var:preset|font-size|x-small"},"spacing":{"margin":{"top":"var:preset|spacing|space-sm","bottom":"var:preset|spacing|space-sm"}}},

"heading": {
"typography": { "fontFamily": "var:preset|font-family|aboreto" }
},

      "button": {
        "color": { 
          "background": "var:preset|color|light-1", 
          "text": "var:preset|color|dark-1" 
        },
	"typography": { 
          "fontFamily": "var:preset|font-family|aboreto", 
          "fontWeight": "bold" 
        },
	"border": { 
          "radius": "6px",
          "width": "1px",
          "style": "solid"
        },
        ":hover": {
          "color": { 
            "background": "var:preset|color|accent-1", 
            "text": "var:preset|color|base"
          },
          "shadow": "0px 0px 18px white"
        },
        "spacing": {
          "padding": {
            "bottom": "var:preset|spacing|space-xs",
            "left": "var:preset|spacing|space-lg", 
            "right": "var:preset|spacing|space-lg",
            "top": "var:preset|spacing|space-xs"
          }
        }
      }
    },

  "variations": {
      "section-1": {
        "color": {
          "background": "var(--wp--preset--color--base)",
          "text": "var(--wp--preset--color--contrast)"
        },
        "elements": {
          "button": {
            "color": {
              "background": "var(--wp--preset--color--accent-1)",
              "text": "var(--wp--preset--color--base)"
            },
            "border": {
              "color": "var(--wp--preset--color--accent-2)"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--accent-2)",
                "text": "var(--wp--preset--color--contrast)"
              },
              "border": {
                "color": "var(--wp--preset--color--accent-1)"
              }
            }
          }
        }
      },
      "section-2": {
        "color": {
          "background": "var(--wp--preset--color--accent-1)",
          "text": "var(--wp--preset--color--base)"
        },
        "elements": {
          "button": {
            "color": {
              "background": "var(--wp--preset--color--accent-2)",
              "text": "var(--wp--preset--color--contrast)"
            },
            "border": {
              "color": "var(--wp--preset--color--base)"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--base)",
                "text": "var(--wp--preset--color--accent-2)"
              },
              "border": {
                "color": "var(--wp--preset--color--accent-2)"
              }
            }
          }
        }
      },
      "section-3": {
        "color": {
          "background": "var(--wp--preset--color--accent-2)",
          "text": "var(--wp--preset--color--contrast)"
        },
        "elements": {
          "button": {
            "color": {
              "background": "var(--wp--preset--color--accent-1)",
              "text": "var(--wp--preset--color--base)"
            },
            "border": {
              "color": "var(--wp--preset--color--contrast)"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--contrast)",
                "text": "var(--wp--preset--color--accent-2)"
              },
              "border": {
                "color": "var(--wp--preset--color--accent-1)"
              }
            }
          }
        }
      },
      "section-4": {
        "color": {
          "background": "var(--wp--preset--color--accent-1)",
          "text": "var(--wp--preset--color--base)"
        },
        "elements": {
          "button": {
            "color": {
              "background": "var(--wp--preset--color--contrast)",
              "text": "var(--wp--preset--color--base)"
            },
            "border": {
              "color": "var(--wp--preset--color--accent-2)"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--accent-2)",
                "text": "var(--wp--preset--color--contrast)"
              },
              "border": {
                "color": "var(--wp--preset--color--base)"
              }
            }
          }
        }
      },
      "section-5": {
        "color": {
          "background": "var(--wp--preset--color--accent-4)",
          "text": "var(--wp--preset--color--base)"
        },
        "elements": {
          "button": {
            "color": {
              "background": "var(--wp--preset--color--accent-5)",
              "text": "var(--wp--preset--color--contrast)"
            },
            "border": {
              "color": "var(--wp--preset--color--accent-2)"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--accent-1)",
                "text": "var(--wp--preset--color--base)"
              },
              "border": {
                "color": "var(--wp--preset--color--accent-5)"
              }
            }
          }
        }
      },
      "section-6": {
        "color": {
          "background": "var(--wp--preset--color--accent-5)",
          "text": "var(--wp--preset--color--contrast)"
        },
        "elements": {
          "button": {
            "color": {
              "background": "var(--wp--preset--color--accent-6)",
              "text": "var(--wp--preset--color--base)"
            },
            "border": {
              "color": "var(--wp--preset--color--accent-1)"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--accent-4)",
                "text": "var(--wp--preset--color--accent-5)"
              },
              "border": {
                "color": "var(--wp--preset--color--contrast)"
              }
            }
          }
        }
      }
    }
  }
}